    <!--DI注入之二—setter注入-->
    <bean id="userService" class="org.example.Service.UserService">
        <!--对应的类中需要有相应的setter方法才行，然后下方的property才是它们注入的参数-->
        <property name="userDao" ref="userDao"/>
